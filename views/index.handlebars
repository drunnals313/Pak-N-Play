{{> items/navbar}}
<h1>Rent-A-Rattle!</h1>  <p>Pack less when you travel</p>

<div class="row">
<div class="col-lg-6">
<h3 class="itemTitle">Select Items to Rent:</h3>

<ul class= "availableList">
  {{#each items}}
    {{#unless purchased}}
      {{> items/item-block purchase=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col-lg-6">
<h3 class="itemTitle">Select Items to Return:</h3>

<ul class= "rentedList">
  {{#each items}}
    {{#if purchased}}
      {{> items/item-block purchase=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

<h3>Add an Item</h3>
<form class="create-form">

  <div class="form-group">
    <label for="ia">Item Name:</label>
    <input type="text" id="ia" name="item_name">
  </div>

  <div class="form-group">
    <label for="pa">Price:</label>
    <input type="text" id="pa" name="price">
  </div>

  <div class="form-group">
    <label for="purchased">Borrow?</label><br>
    <input type="radio" name="purchased" value="1" checked> Rented!<br>
    <input type="radio" name="purchased" value="0"> Returned!
  </div>

  <button type="submit">Add Item</button>
</form>
<br>


