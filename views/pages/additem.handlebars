<h1>Add an item</h1>
{{!-- Radios for Rent, Trade, Buy --}}
<h4>You are adding an item for</h4>
<div class="form-check form-check-inline">
  <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="rent">
  <label class="form-check-label" for="inlineRadio1">Rent</label>
</div>
<div class="form-check form-check-inline">
  <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="trade">
  <label class="form-check-label" for="inlineRadio2">Trade</label>
</div><div class="form-check form-check-inline">
  <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="buy">
  <label class="form-check-label" for="inlineRadio1">Buy</label>
</div>

<form>
    <div class="form-row">
        <div class="col">
            <label for="firstname">First Name</label>
            <input type="text" class="form-control" placeholder="First name">
        </div>
        <div class="col">
            <label for="lastname">Last Name</label>
            <input type="text" class="form-control" placeholder="Last name">
        </div>
    </div>
    <div class="form-row">
        <div class="col-8">
            <label for="itemname">Item Name</label>
            <input type="text" class="form-control" placeholder="Item name">
        </div>
        <div class="col">
            <label for="itemtype">Select Item Type</label>
            <select id="inputState" class="form-control">
                <option selected>Choose...</option>
                <option>...</option>
            </select>
        </div>
    </div>
</form>
